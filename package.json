{
  "name": "@dxos/editor-kit",
  "version": "0.0.1",
  "description": "DxOS Editor Kit.",
  "license": "UNLICENSED",
  "repository": "https://github.com/dxos/editor-kit",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "test": "lerna run test",
    "posttest": "npm run lint"
  },
  "lint-staged": {
    "*.js": "semistandard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "husky": "^3.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.9",
    "semistandard": "^14.2.0"
  },
  "semistandard": {
    "parser": "babel-eslint",
    "env": [
      "jest",
      "node",
      "browser"
    ]
  }
}